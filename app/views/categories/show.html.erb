<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<div class="text-center mt-4">
  <% if logged_in? && current_user.admin? %>
    <%= button_to "Edit Category", edit_category_path(@category),
      method: :get,
      class: "btn btn-outline-info btn-sm"
    %>
    <%= button_to "Delete Category", category_path(@category),
      method: :delete, class: "btn btn-outline-danger btn-sm",
      data: { confirm: "Are you sure you want to delete category?" }
    %>
  <% end %>
</div>
<% if @articles.length == 0 %>
  <h3 class="text-center mt-4">No boops yet :(</h3>
<% else %>
  <h3 class="text-center mt-4">boops</h3>
<% end %>
