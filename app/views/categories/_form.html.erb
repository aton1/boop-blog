<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-dark rounded") do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: "btn btn-outline-light btn-sm") %>
        </div>
      <% end %>
      <%= link_to "< Go back", categories_path %>
    </div>
  </div>
</div>
