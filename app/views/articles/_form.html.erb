<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render "shared/errors", obj: @article %>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-dark rounded") do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of boop article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of boop article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :categories, "Categories", class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
              { prompt: "Select categories below (optional)" },
              { multiple: true, size: 3, class: "custom-select shadow rounded" })
            %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@article.new_record? ? "Create Boop" : "Update Boop", class: "btn btn-outline-light btn-sm") %>
        </div>
      <% end %>
      <div class="justify-content-center">
        <%= button_to "Delete Boop", article_path(@article), method: :delete, class: "btn btn-danger btn-block" if logged_in? && !@article.new_record? %>
      </div>
      <%= link_to "< Go back", articles_path %>
    </div>
  </div>
</div>
