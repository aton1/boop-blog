<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render 'shared/errors', obj: @article %>
      <%# specifying 'model: @article' will also prefill the user's inputted data from the model if applicable %>
      <%# if @article is empty, then it will return a blank form %>
      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-md-2 col-form-label text-light" %>
          <div class="col-md-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-sm"%>
        </div>
      <% end %>
        <%= link_to '< Go back', articles_path %>
    </div>
  </div>
</div>
